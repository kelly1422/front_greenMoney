<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <FrameLayout
                android:id="@+id/fl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:src="@drawable/tree"/>

                <ImageView
                    android:id="@+id/apple0"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower1"
                    android:translationX="50dp"
                    android:translationY="150dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower2"
                    android:translationX="300dp"
                    android:translationY="200dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower3"
                    android:translationX="100dp"
                    android:translationY="10dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple3"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower1"
                    android:translationX="200dp"
                    android:translationY="10dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple4"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower2"
                    android:translationX="200dp"
                    android:translationY="100dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple5"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower3"
                    android:translationX="200dp"
                    android:translationY="200dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple6"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower1"
                    android:translationX="10dp"
                    android:translationY="250dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple7"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower2"
                    android:translationX="100dp"
                    android:translationY="250dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple8"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower3"
                    android:translationX="100dp"
                    android:translationY="100dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple9"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower1"
                    android:translationX="200dp"
                    android:translationY="300dp"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/apple10"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/flower3"
                    android:translationX="270dp"
                    android:translationY="90dp"
                    android:visibility="gone" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/ac_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홍길동님의 잔고: "
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ac_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="000,000,000"
                android:textSize="30dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"></LinearLayout>
    </LinearLayout>
</LinearLayout>
